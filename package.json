{
  "name": "react-with-forwarded-ref",
  "version": "0.1.0",
  "description": "React higher-order component (HOC) for ref forwarding",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:rpearce/react-with-forwarded-ref.git"
  },
  "homepage": "https://github.com/rpearce/react-with-forwarded-ref",
  "bugs": "https://github.com/rpearce/react-with-forwarded-ref/issues",
  "author": "Robert Pearce <me@robertwpearce.com>",
  "contributors": [
    "Robert Pearce <me@robertwpearce.com> (https://robertwpearce.com)"
  ],
  "license": "ISC",
  "keywords": [
    "forwardRef",
    "react",
    "react-component",
    "higher-order-component",
    "hoc"
  ],
  "tags": [
    "forwardRef",
    "react",
    "react-component",
    "higher-order-component",
    "hoc"
  ],
  "files": [
    "AUTHORS",
    "LICENSE",
    "README.md",
    "index.d.js",
    "index.js",
    "src/"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:docs",
    "build:docs": "browserify example/app.js -o docs/app.js -t [ babelify ]",
    "build:js": "rm -rf src && babel source --out-dir src",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint --ext .js .",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "npm run lint && npm run build && jest --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "all-contributors-cli": "^6.9.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "coveralls": "^3.0.7",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.2",
    "eslint": "^6.5.1",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "jest": "^24.9.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2"
  },
  "peerDependencies": {
    "react": ">= 16.3"
  }
}
